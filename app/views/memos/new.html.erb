<h2>Create Memo</h2>

<%= form_tag("/create") do %>
  <div class="form-group" >
    <%= label_tag "form-title", "Title" %>
    <%= text_field :memos, :title, id:"form_title", class:"form-control",placeholder:"title" %>
  </div>    
  
  <div class="form-group" >
    <%= label_tag "form-content", "Content" %>
    <%= text_field :memos, :body, id:"form_content", class:"form-control",placeholder:"content" %>
  </div>
  <div class="form-group" >
    <%= label_tag "form-catregory", "Category" %>
    <%= select_tag 'memos[category_id]', options_from_collection_for_select(@categories, :id, :name), id:"form_category",class:"form-control" %>
  </div>  
    <%=submit_tag"Create",class:"btn btn-primary"%>
<% end %>
